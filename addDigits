const addDigits = (originalString) => {
let currentSum = originalString;
  const sumDigits = (str) => {
    let strOfNumber = String(str);
  let index = strOfNumber.length - 1;
  let sum = 0;
  while (index >= 0) {
    sum += Number(strOfNumber[index]);
    index -= 1;
    } return sum; 
  };
while (currentSum >= 10) {
  currentSum = sumDigits(currentSum);
} return currentSum;
};
